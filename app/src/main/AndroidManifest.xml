<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.android.muzica">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Home"
            android:label="@string/activity_one"
            android:parentActivityName=".MainActivity">

            <!-- Parent activity meta-data -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".MainActivity" />
        </activity>
        <activity
            android:name=".Library"
            android:label="@string/activity_two"
            android:parentActivityName=".Home">

            <!-- Parent activity meta-data -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".Home" />
        </activity>
        <activity
            android:name=".Playlist"
            android:label="@string/activity_three"
            android:parentActivityName=".Home">

            <!-- Parent activity meta-data -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".Home" />
        </activity>
        <activity
            android:name=".Favourite"
            android:label="@string/activity_four"
            android:parentActivityName=".Home">

            <!-- Parent activity meta-data -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".Home" />
        </activity>
        <activity
            android:name=".NowPlaying"
            android:label="@string/activity_five"
            android:parentActivityName=".Home">

            <!-- Parent activity meta-data -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".Home" />
        </activity>
        <activity android:name=".Mainscreen" />
    </application>

</manifest>