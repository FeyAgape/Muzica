<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.android.muzica.Playlist">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/welcome_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:contentDescription="@string/content_description"
            android:scaleType="centerCrop"
            android:src="@drawable/music" />

        <LinearLayout
            android:id="@+id/linearLayout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:background="@color/colorScrim"
            android:orientation="vertical">

            <TextView
                style="@style/Title_Pages"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/xsmall"
                android:layout_marginRight="@dimen/xsmall"
                android:layout_marginTop="@dimen/xsmall"
                android:background="@color/colorScrim"
                android:paddingLeft="@dimen/small"
                android:text="@string/activity_four"
                android:textColor="@color/colorSection" />

            <TextView
                style="@style/Title_Pages2"
                android:layout_marginTop="@dimen/xsmall"
                android:layout_marginLeft="@dimen/xsmall"
                android:layout_marginRight="@dimen/xsmall"
                android:text="@string/activity_four1"/>

            <!-- Now Playing layout. -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_margin="@dimen/small"
                android:background="@color/colorBackground"
                android:orientation="vertical">

                <TextView
                    style="@style/Title_Pages"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/small"
                    android:text="@string/activity_three"
                    android:textColor="@color/colorPrimaryDark" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/album_image"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:paddingLeft="@dimen/small"
                        android:src="@drawable/music7" />

                    <TextView
                        android:id="@+id/song"
                        style="@style/Description"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_centerHorizontal="true"
                        android:text="@string/song"
                        android:textColor="@color/colorPrimaryDark" />

                    <TextView
                        android:id="@+id/album"
                        style="@style/DescriptionMini"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignLeft="@+id/song"
                        android:layout_alignStart="@+id/song"
                        android:layout_below="@+id/song"
                        android:text="@string/album_name"
                        android:textColor="@color/colorPrimaryDark" />

                    <LinearLayout
                        android:id="@+id/linearLayout2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBottom="@+id/album_image"
                        android:layout_alignLeft="@+id/album"
                        android:layout_alignStart="@+id/album"
                        android:layout_marginBottom="12dp"
                        android:orientation="horizontal">

                        <ImageButton
                            android:id="@+id/imageButton"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="@dimen/small"
                            android:background="@color/colorPrimary"
                            android:tint="@color/colorAccent"
                            app:srcCompat="@android:drawable/ic_media_previous" />

                        <ImageButton
                            android:id="@+id/imageButton2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="@dimen/small"
                            android:background="@color/colorPrimary"
                            android:tint="@color/colorAccent"
                            app:srcCompat="@android:drawable/ic_media_play" />

                        <ImageButton
                            android:id="@+id/imageButton3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="@dimen/small"
                            android:background="@color/colorPrimary"
                            android:tint="@color/colorAccent"
                            app:srcCompat="@android:drawable/ic_media_next" />

                        <ImageButton
                            android:id="@+id/imageButton5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="@dimen/small"
                            android:background="@color/colorPrimary"
                            android:tint="@color/colorAccent"
                            app:srcCompat="@android:drawable/ic_lock_silent_mode_off" />

                        <ImageButton
                            android:id="@+id/imageButton6"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@color/colorPrimary"
                            android:tint="@color/colorAccent"
                            app:srcCompat="@android:drawable/ic_menu_share" />
                    </LinearLayout>

                    <ImageButton
                        android:id="@+id/imageButton4"
                        android:layout_width="26dp"
                        android:layout_height="26dp"
                        android:layout_alignEnd="@+id/linearLayout2"
                        android:layout_alignParentTop="true"
                        android:layout_alignRight="@+id/linearLayout2"
                        android:cropToPadding="false"
                        android:tint="@color/colorPrimary"
                        app:srcCompat="@android:drawable/btn_star" />

                </RelativeLayout>
            </LinearLayout>

            <!-- Library layout. -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/small"
                android:background="@color/colorScrim"
                android:orientation="vertical">

                <Button
                    android:id="@+id/button"
                    style="@style/Button"
                    android:layout_marginLeft="@dimen/xsmall"
                    android:layout_marginRight="@dimen/xsmall"
                    android:layout_marginTop="@dimen/xsmall"
                    android:elevation="@dimen/medium"
                    android:text="@string/music1" />


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_margin="@dimen/xsmall"
                    android:background="@color/colorBackground1"
                    android:elevation="4dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/one"
                        style="@style/Description"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="@dimen/xsmall"
                        android:paddingTop="@dimen/xsmall"
                        android:text="@string/playlist"
                        android:textColor="@color/colorBlack" />

                    <TextView
                        style="@style/DescriptionMini"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:paddingRight="@dimen/xsmall"
                        android:paddingTop="@dimen/xsmall"
                        android:text="@string/Number"
                        android:textColor="@color/colorBlack" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_margin="@dimen/xsmall"
                    android:background="@color/colorBackground1"
                    android:elevation="4dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/two"
                        style="@style/Description"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="@dimen/xsmall"
                        android:paddingTop="@dimen/xsmall"
                        android:text="@string/playlist"
                        android:textColor="@color/colorBlack" />

                    <TextView
                        style="@style/DescriptionMini"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:paddingRight="@dimen/xsmall"
                        android:paddingTop="@dimen/xsmall"
                        android:text="@string/Number"
                        android:textColor="@color/colorBlack" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_margin="@dimen/xsmall"
                    android:background="@color/colorBackground1"
                    android:elevation="4dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/three"
                        style="@style/Description"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="@dimen/xsmall"
                        android:paddingTop="@dimen/xsmall"
                        android:text="@string/playlist"
                        android:textColor="@color/colorBlack" />

                    <TextView
                        style="@style/DescriptionMini"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:paddingRight="@dimen/xsmall"
                        android:paddingTop="@dimen/xsmall"
                        android:text="@string/Number"
                        android:textColor="@color/colorBlack" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_margin="@dimen/xsmall"
                    android:background="@color/colorBackground1"
                    android:elevation="4dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/four"
                        style="@style/Description"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="@dimen/xsmall"
                        android:paddingTop="@dimen/xsmall"
                        android:text="@string/playlist"
                        android:textColor="@color/colorBlack" />

                    <TextView
                        style="@style/DescriptionMini"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:paddingRight="@dimen/xsmall"
                        android:paddingTop="@dimen/xsmall"
                        android:text="@string/Number"
                        android:textColor="@color/colorBlack" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_margin="@dimen/xsmall"
                    android:background="@color/colorBackground1"
                    android:elevation="4dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/five"
                        style="@style/Description"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="@dimen/xsmall"
                        android:paddingTop="@dimen/xsmall"
                        android:text="@string/playlist"
                        android:textColor="@color/colorBlack" />

                    <TextView
                        style="@style/DescriptionMini"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:paddingRight="@dimen/xsmall"
                        android:paddingTop="@dimen/xsmall"
                        android:text="@string/Number"
                        android:textColor="@color/colorBlack" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_margin="@dimen/xsmall"
                    android:background="@color/colorBackground1"
                    android:elevation="4dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/six"
                        style="@style/Description"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="@dimen/xsmall"
                        android:paddingTop="@dimen/xsmall"
                        android:text="@string/playlist"
                        android:textColor="@color/colorBlack" />

                    <TextView
                        style="@style/DescriptionMini"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:paddingRight="@dimen/xsmall"
                        android:paddingTop="@dimen/xsmall"
                        android:text="@string/Number"
                        android:textColor="@color/colorBlack" />

                </RelativeLayout>

            </LinearLayout>


        </LinearLayout>


    </RelativeLayout>

</ScrollView>
