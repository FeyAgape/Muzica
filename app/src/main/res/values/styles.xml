<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="WelcomeButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/colorAccent</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">@dimen/button_text_medium</item>
        <item name="android:typeface">normal</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingLeft">@dimen/large</item>
        <item name="android:paddingRight">@dimen/large</item>
    </style>

    <style name="Title">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#000</item>
        <item name="android:textSize">@dimen/title_large</item>
        <item name="android:typeface">normal</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingLeft">@dimen/large</item>
        <item name="android:paddingRight">@dimen/large</item>
    </style>

    <style name="Title_Pages">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:textSize">@dimen/title_large</item>
        <item name="android:typeface">normal</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingTop">@dimen/small</item>
        <item name="android:paddingBottom">@dimen/small</item>

    </style>

    <style name="LinearLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">150dp</item>
        <item name="android:layout_marginLeft">@dimen/xsmall</item>
        <item name="android:layout_marginRight">@dimen/xsmall</item>
        <item name="android:layout_marginTop">@dimen/mini</item>
        <item name="android:layout_marginBottom">@dimen/mini</item>
        <item name="android:background">#FFF</item>
        <item name="android:elevation">@dimen/xsmall</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="MyCustomTabLayout" parent="Widget.Design.TabLayout">
        <item name="tabIndicatorColor">@color/colorAccent</item>
        <item name="tabIndicatorHeight">2dp</item>
        <item name="tabPaddingStart">12dp</item>
        <item name="tabPaddingEnd">12dp</item>
        <item name="tabBackground">@color/colorPrimary</item>
        <item name="tabTextAppearance">@style/MyCustomTabTextAppearance</item>
        <item name="tabSelectedTextColor">@color/colorWhite</item>
    </style>

    <style name="MyCustomTabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="textAllCaps">true</item>
    </style>

    <style name="Image">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/image_size</item>
        <item name="android:scaleType">centerCrop</item>
    </style>

    <style name="Description">
        <item name="android:textColor">#000</item>
        <item name="android:textSize">@dimen/button_text_medium</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textStyle">bold</item>
        <item name="android:typeface">normal</item>

    </style>

    <style name="DescriptionMini">
        <item name="android:textColor">#000</item>
        <item name="android:textSize">@dimen/caption_small</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:typeface">normal</item>
        <item name="android:paddingTop">@dimen/small</item>
    </style>

    <style name="SocialImageView">
        <item name="android:layout_width">@dimen/icon_size</item>
        <item name="android:layout_height">@dimen/icon_size</item>
        <item name="android:layout_marginLeft">@dimen/large</item>
    </style>

    <style name="SocialTextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#757575</item>
        <item name="android:textSize">@dimen/caption_small</item>
        <item name="android:typeface">monospace</item>
        <item name="android:textStyle">bold</item>
        <item name="android:padding">@dimen/xsmall</item>
        <item name="android:layout_marginLeft">@dimen/large</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>
